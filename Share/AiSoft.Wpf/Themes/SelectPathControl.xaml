<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AiSoft.Wpf"
                    xmlns:control="clr-namespace:AiSoft.Wpf.Controls">

    <Style TargetType="{x:Type control:SelectPath}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:SelectPath}">
                    <DockPanel>
                        <Button x:Name="SelectBtn" DockPanel.Dock="Right" Height="{TemplateBinding Height}" Content="..." Style="{TemplateBinding Style}"/>
                        <TextBox Text="{TemplateBinding Path}" IsReadOnlyCaretVisible="True" Height="{TemplateBinding Height}" Margin="0,0,5,0" MinWidth="80"/>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>